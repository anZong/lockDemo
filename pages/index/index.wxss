
page {
    background-color: #305066;
}

.container{
    position: relative;
    height: 100vh;
}

.reset {
    color: #9966FF;
    text-align: center;
}
.title {
    text-align: center;
    color: #00CC66;
    font-size: 14px;
    display: flex;
    justify-content: space-between;
    margin-top: 10px;
}

.title text{
    flex: 0.3;
}

.title .center{
    flex: 1;
}

.mycanvas {
    width: 90vw;
    height: 85vw;
    margin: 0 auto;
    box-sizing: border-box;
    background-color: #305066;
}

.adv{
    padding: 10px;
}

.tips{
    color: #aaa;
    font-size: 12px;
    margin: 10px auto;
}

.items{
    display: flex;
}

.item{
    display: flex;
    align-items: center;
    margin: 10px;
}

.adv{
    margin-top: 0;
}

.adv .item-logo{
    width: 40px;
    height: 40px;
    border-radius: 50%;
}

.adv .item-name{
    color: white;
    font-size: 12px;
    margin-left: 10px;
    padding: 0;
    background-color: transparent;
}

.item-name::after{
    border: none;
}

.banner{
    margin-top: 10px;
    width: 100vw;
    min-height: 90px;
}

.hide{
    display: none;
}

.bottom{
    position: absolute;
    bottom: 12px;
}

.top{
    position: absolute;
    top: 0;
}
.center{
    display: block;
    text-align: center;
}